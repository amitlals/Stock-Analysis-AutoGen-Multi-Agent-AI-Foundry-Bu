# API Keys
ALPHAVANTAGE_API_KEY=your_alphavantage_api_key_here

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# Azure Logic Apps (for email reports)
LOGIC_APP_URL=https://your-logic-app-url.azure.com/triggers/manual/invoke?api-version=2022-05-01&sp=...

# Authentication
# Set to 'True' to enable authentication, 'False' to disable
AUTH_ENABLED=True
# Comma-separated list of username:password pairs for basic auth
AUTH_CREDENTIALS=admin:admin123,user:password123

# Cache settings
# How long to cache stock data in seconds (default: 3600 = 1 hour)
CACHE_DURATION=3600
CACHE_DIRECTORY=./data/cache

# Application settings
DEBUG=False
LOG_LEVEL=INFO
UI_PORT=7860